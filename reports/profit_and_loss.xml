<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report 
            id="action_report_profit_and_loss"
            model="report.profit.and.loss"
            string="Report Profit and Loss"
            report_type="qweb-pdf"
            name="report_profit_and_loss.report_profitandloss"
            file="report_profit_and_loss.report_profitandloss"
            menu="False"
        />
        
        <record id="paperformat_default_with_landscape" model="report.paperformat">
           <field name="name">Default with Landscape</field>
           <field name="orientation">Landscape</field>
        </record>

        <record id="action_report_profit_and_loss" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_default_with_landscape"/>
        </record>   
            
        <template id="report_profitandloss">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Profit and Loss</h2>

                        <div class="row mt32 mb32">
                            <div class="col-xs-4">
                                <strong>Company Name:</strong>
                                <p t-esc="data['form']['company_name']"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Period start:</strong>
                                <p t-esc="data['form']['period_start']"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Period end:</strong>
                                <p t-esc="data['form']['period_end']"/>
                            </div>
                        </div>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <t t-foreach="data['form']['periods']" t-as="periodTitle">
                                        <th><span t-esc="periodTitle['name']"/></th>
                                    </t>
                                    <th>Balance</th>
                                </tr>
                            </thead>    
                            <tbody>
                                <t t-foreach="data['form']['codes']" t-as="code">
                                    <tr>
                                        <th style="padding-left: 20px;"><span t-esc="code['code']"/>: <span t-esc="code['name']"/></th>
                                        <t t-foreach="code['periods']" t-as="periodCode">
                                            <td class="text-right"><span t-esc="periodCode['sum']"/> <span t-esc="data['form']['currency_symbol']"/></td>
                                        </t>
                                        <th class="text-right"><span t-esc="code['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                    </tr>
                                    <t t-if="code['code'] == 7">
                                        <t t-foreach="code['categories']" t-as="category">
                                            <tr>
                                                <th style="padding-left: 60px;"><span t-esc="category['name']"/></th>
                                                <t t-foreach="category['periods']" t-as="periodCategory">
                                                    <td class="text-right"><span t-esc="periodCategory['sum']"/> <span t-esc="data['form']['currency_symbol']"/></td>
                                                </t>
                                                <th class="text-right"><span t-esc="category['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                            </tr>
                                        </t>
                                    </t>
                                    
                                    <t t-foreach="code['codes']" t-as="subcode">
                                        <t t-if="subcode['sum']>0">
                                            <tr>
                                                <th style="padding-left: 40px;"><span t-esc="subcode['code']"/>: <span t-esc="subcode['name']"/></th>
                                                <t t-foreach="subcode['periods']" t-as="periodSubcode">
                                                    <td class="text-right"><span t-esc="periodSubcode['sum']"/> <span t-esc="data['form']['currency_symbol']"/></td>
                                                </t>
                                                <th class="text-right"><span t-esc="subcode['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                            </tr>
                                            <!--
                                            <t t-if="subcode['code'] == 70">
                                                <t t-foreach="subcode['categories']" t-as="category">
                                                    <tr>
                                                        <th>&#09;&#09;&#09;<span t-esc="category['name']"/></th>
                                                        <t t-foreach="category['periods']" t-as="periodCategory">
                                                            <td class="text-right"><span t-esc="periodCategory['sum']"/> <span t-esc="data['form']['currency_symbol']"/></td>
                                                        </t>
                                                        <th class="text-right"><span t-esc="category['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                                    </tr>
                                                </t>
                                            </t>
                                            -->
                                        </t>
                                    </t>
                                </t>
                                <tr>
                                    <th><span t-esc="data['form']['total']['name']"/></th>
                                    <t t-foreach="data['form']['total']['periods']" t-as="period">
                                        <th class="text-right"><span t-esc="period['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                    </t>
                                    <th class="text-right"><span t-esc="data['form']['total']['sum']"/> <span t-esc="data['form']['currency_symbol']"/></th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>