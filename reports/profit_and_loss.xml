<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_profitandloss">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Profit and Loss</h2>

                        <div class="row mt32 mb32">
                            <div class="col-xs-4">
                                <strong>Company Name:</strong>
                                <p t-esc="data['form']['company_name']"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Period start:</strong>
                                <p t-esc="data['form']['period_start']"/>
                            </div>
                            <div class="col-xs-4">
                                <strong>Period end:</strong>
                                <p t-esc="data['form']['period_end']"/>
                            </div>
                        </div>

                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <t t-foreach="data['form']['periods']" t-as="periodTitle">
                                        <th><span t-esc="periodTitle['name']"/></th>
                                    </t>
                                    <th>Balance</th>
                                </tr>
                                <t t-foreach="data['form']['codes']" t-as="code">
                                    <tr>
                                        <th>...<span t-esc="code['code']"/>: <span t-esc="code['name']"/></th>
                                        <t t-foreach="code['periods']" t-as="periodCode">
                                            <td><span t-esc="periodCode['sum']"/></td>
                                        </t>
                                        <th><span t-esc="code['sum']"/></th>
                                    </tr>
                                    <t t-foreach="code['codes']" t-as="subcode">
                                        <tr>
                                            <th>......<span t-esc="subcode['code']"/>: <span t-esc="subcode['name']"/></th>
                                            <t t-foreach="subcode['periods']" t-as="periodSubcode">
                                                <td><span t-esc="periodSubcode['sum']"/></td>
                                            </t>
                                            <th><span t-esc="subcode['sum']"/></th>
                                        </tr>
                                    </t>
                                </t>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>